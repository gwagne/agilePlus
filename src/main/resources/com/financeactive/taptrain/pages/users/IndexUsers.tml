<html t:type="layout" title="${message:title}"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">

<t:jquery.dialogajaxlink t:id="new" dialog="userFormDialog" zone="userFormZone">${message:action.newUser}</t:jquery.dialogajaxlink>
&nbsp;
<t:actionlink t:id="randomUser" zone="usersGridZone">${message:action.newRandomUser}</t:actionlink>



<t:zone t:id="usersGridZone" update="show">
    <t:grid source="users" row="var:user" add="actions" class="table table-striped table-bordered">
        <p:actionsCell>
            <t:actionlink t:id="delete" context="var:user" zone="usersGridZone" t:mixins="simpleAlert"
                          message="Êtes vous sûr d'être sûr?">${message:action.delete}</t:actionlink>
            &nbsp;
            <!--<t:actionlink t:id="edit" context="var:user" zone="userFormZone">${message:action.edit}</t:actionlink>-->
            <t:jquery.dialogajaxlink t:id="edit" context="var:user" dialog="userFormDialog" zone="userFormZone">${message:action.edit}</t:jquery.dialogajaxlink>
        </p:actionsCell>
    </t:grid>
</t:zone>

<hr/>

<t:jquery.dialog t:id="userFormDialog">
    <t:zone t:id="userFormZone">
        <t:edituser user="user"/>
    </t:zone>
</t:jquery.dialog>

</html>
